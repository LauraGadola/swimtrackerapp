<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_weekly_goals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cobaltix.internal_projects.swimtrackerapp.WeeklyGoalsActivity"
    tools:showIn="@layout/activity_weekly_goals">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/etWeek"
        android:hint="Week"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/etWeek"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/etWeekMiles"
        android:inputType="numberDecimal"
        android:hint="Weekly miles"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/etWeekMiles"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentStart="true"
        android:id="@+id/etLongest"
        android:hint="Longest"
        android:inputType="numberDecimal"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/etLongest"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentStart="true"
        android:id="@+id/etWeight"
        android:hint="Weight"
        android:inputType="numberDecimal"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/etWeight"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentStart="true"
        android:id="@+id/etDescription"
        android:hint="Short Description"
        />

</RelativeLayout>
